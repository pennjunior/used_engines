<!-- app/views/carts/purchases/success.html.erb -->
<div class="success-container">
  <div class="success-card">
    <!-- Success Icon -->
    <div class="success-icon">
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <circle cx="12" cy="12" r="10" fill="#10B981"/>
        <path d="m9 12 2 2 4-4" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
    </div>
    
    <!-- Success Message -->
    <h1 class="success-title">Order Submitted Successfully! ðŸŽ‰</h1>
    <p class="success-subtitle">
      Thank you for your purchase! We've received your order details and will be in touch shortly.
    </p>
    
    <!-- Order Summary -->
    <div class="order-summary">
      <h3>What happens next?</h3>
      <div class="next-steps">
        <div class="step">
          <div class="step-number">1</div>
          <div class="step-content">
            <h4>Email Confirmation</h4>
            <p>You'll receive a confirmation email at <strong><%= @purchase&.email || 'your email address' %></strong></p>
          </div>
        </div>
        
        <div class="step">
          <div class="step-number">2</div>
          <div class="step-content">
            <h4>Personal Discussion</h4>
            <p>We'll reach out to discuss your order details and answer any questions</p>
          </div>
        </div>
        
        <div class="step">
          <div class="step-number">3</div>
          <div class="step-content">
            <h4>Payment Instructions</h4>
            <p>Once everything is confirmed, we'll send you secure payment details</p>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Purchase Details -->
    <% if @purchase %>
    <div class="purchase-details">
      <h3>Order Details</h3>
      <div class="details-grid">
        <div class="detail-item">
          <span class="label">Order Date:</span>
          <span class="value"><%= @purchase.created_at.strftime("%B %d, %Y at %I:%M %p") %></span>
        </div>
        <div class="detail-item">
          <span class="label">Email:</span>
          <span class="value"><%= @purchase.email %></span>
        </div>
        <div class="detail-item">
          <span class="label">Phone:</span>
          <span class="value"><%= @purchase.phone %></span>
        </div>
        <div class="detail-item">
          <span class="label">Payment Method:</span>
          <span class="value"><%= @purchase.payment_method.humanize %></span>
        </div>
        <% if @purchase.total_amount %>
        <div class="detail-item">
          <span class="label">Total Amount:</span>
          <span class="value total-amount"><%= number_to_currency(@purchase.total_amount) %></span>
        </div>
        <% end %>
      </div>
    </div>
    <% end %>
    
    <!-- Action Buttons -->
    <div class="action-buttons">
      <%= link_to "Continue Shopping", engines_path, class: "btn btn-primary" %>
      <%= link_to "View All Engines", engines_path, class: "btn btn-secondary" %>
    </div>
    
    <!-- Contact Info -->
    <div class="contact-info">
      <p>Questions about your order?</p>
      <p>Contact us at <a href="mailto:contact@autobidseller.com">contact@autobidseller.com</a> or call <a href="tel:+1(341)223-3974">(341)223-3974</a></p>
    </div>
  </div>
</div>

<style>
