<!-- Professional Checkout Page using your actual data -->
<div class="checkout-container">
  <!-- Header -->
  <div class="checkout-header">
    <div class="progress-indicator">
      <div class="progress-step completed"></div>
      <div class="progress-step active"></div>
      <div class="progress-step"></div>
    </div>
    <h1>Your Shopping Cart</h1>
    <p>Review your items and proceed to checkout</p>
  </div>

  <div class="main-content">
    <!-- Cart Items Section -->
    <div class="cart-section">
      <div class="section-header">
        <svg class="cart-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H17M17 13V16.5M9 19.5C9.8 19.5 10.5 20.2 10.5 21S9.8 22.5 9 22.5 7.5 21.8 7.5 21 8.2 19.5 9 19.5ZM20 19.5C20.8 19.5 21.5 20.2 21.5 21S20.8 22.5 20 22.5 18.5 21.8 18.5 21 19.2 19.5 20 19.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <h2>Cart Items</h2>
      </div>
      
      <%= turbo_frame_tag "checkout-line-items" do %>
        <div class="cart-items">
          <% if @line_items.any? %>
            <% @line_items.each do |item| %>
              <div id="line_item_<%= item.id %>" class="cart-item">
                <%= image_tag item.engine.engineable.photos.first, alt: item.engine.title, class: "item-image" %>
                <div class="item-details">
                  <div class="item-title"><%= item.engine.title %></div>
                  <div class="item-meta">Quantity: <%= item.quantity %></div>
                  <div class="item-price"><%= number_to_currency(item.total) %></div>
                </div>
                <div class="item-actions">
                  <%= button_to cart_remove_item_path(item.id), 
                      method: :post,
                      form: { data: { turbo_confirm: "Are you sure?" } },
                      class: "remove-btn" do %>
                    <svg width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                      <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="empty-cart">
              <svg class="empty-cart-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M3 3H5L5.4 5M7 13H17L21 5H5.4M7 13L5.4 5M7 13L4.7 15.3C4.3 15.7 4.6 16.5 5.1 16.5H17M17 13V16.5M9 19.5C9.8 19.5 10.5 20.2 10.5 21S9.8 22.5 9 22.5 7.5 21.8 7.5 21 8.2 19.5 9 19.5ZM20 19.5C20.8 19.5 21.5 20.2 21.5 21S20.8 22.5 20 22.5 18.5 21.8 18.5 21 19.2 19.5 20 19.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <h3>Your Cart is Empty</h3>
              <p>Add some items to get started!</p>
              <%= link_to "Return To Engines", engines_path, class: "shop-link", data: { turbo_frame: "_top" } %>       
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Order Summary -->
    <div class="order-summary">
      <div class="summary-header">
        <h3>
          <svg width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            <path d="M7 11.5a.5.5 0 0 1 .5-.5h1.5a.5.5 0 0 1 0 1H7.5a.5.5 0 0 1-.5-.5zm-2-3a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-3a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
          </svg>
          Order Summary
        </h3>
      </div>
      
      <div class="summary-content">
        <% if @line_items.any? %>
          <div class="summary-row">
            <span class="summary-label">Items (<%= @line_items.sum(:quantity) %>)</span>
            <span class="summary-value"><%= number_to_currency(@cart.total) %></span>
          </div>
          
          <div class="summary-row">
            <span class="summary-label">Shipping</span>
            <span class="summary-value">Calculated at checkout</span>
          </div>
          
          <div class="summary-row">
            <span class="summary-label">Tax</span>
            <span class="summary-value">Calculated at checkout</span>
          </div>
          
          <div class="summary-row total-row">
            <span class="summary-label">Total</span>
            <span class="summary-value"><%= number_to_currency(@cart.total) %></span>
          </div>
        <% else %>
          <div class="summary-row">
            <span class="summary-label">Cart Total</span>
            <span class="summary-value">$0.00</span>
          </div>
        <% end %>
        
        <% if @line_items.any? %>
          <div data-controller="checkout" data-checkout-cart-id-value="<%= @cart.id %>">
            <button class="checkout-button" data-action="click->checkout#open">
              <svg style="margin-right: 8px;" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
              </svg>
              Proceed to Checkout
            </button>
            <%= turbo_frame_tag "checkout-modal-frame" %>
          </div>
        <% else %>
          <button class="checkout-button" disabled>
            Cart is Empty
          </button>
        <% end %>
        
        <div class="security-badges">
          <div class="security-badge">
            <svg class="security-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 1L3 5V11C3 16.55 6.84 21.74 12 23C17.16 21.74 21 16.55 21 11V5L12 1ZM10 17L5 12L6.41 10.59L10 14.17L17.59 6.58L19 8L10 17Z"/>
            </svg>
            <span>Secure Checkout</span>
          </div>
          
          <div class="security-badge">
            <svg class="security-icon" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18 8H17V6C17 3.24 14.76 1 12 1S7 3.24 7 6V8H6C4.9 8 4 8.9 4 10V20C4 21.1 4.9 22 6 22H18C19.1 22 20 21.1 20 20V10C20 8.9 19.1 8 18 8ZM12 17C10.9 17 10 16.1 10 15S10.9 13 12 13 14 13.9 14 15 13.1 17 12 17ZM15.1 8H8.9V6C8.9 4.29 10.29 2.9 12 2.9S15.1 4.29 15.1 6V8Z"/>
            </svg>
            <span>SSL Protected</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

