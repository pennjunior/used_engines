<!-- app/views/engines/index.html.erb -->
<form class="search-form" action="<%= engines_path %>" method="get">
  <div class="search-box">
    <input
      type="text"
      name="query"
      placeholder="Easy Check (e.g., gmc sierra engines)"
      class="search-input"
      value="<%= params[:query] %>"
    />
    <button type="submit" class="search-button">
      <i class="fa-brands fa-searchengin icon"></i>
    </button>
  </div>
</form>
