<div class="cart-panel bg-white rounded-2xl shadow-lg w-72 max-h-96 overflow-y-auto p-4 space-y-3">
  <% if session[:cart].present? %>
    <% Engine.where(id: session[:cart]).each do |engine| %>
      <div class="cart-item flex justify-between items-center border-b border-gray-200 pb-2">
        <div class="text-sm font-medium text-gray-800">
          <%= engine.title %>
        </div>

        <%= button_to remove_cart_path(engine), method: :delete, remote: true, class: "text-rd", title: "Remove item" do %>
          <i class="fa-solid fa-trash"></i>
        <% end %>
      </div>
    <% end %>

    <div class="pt-3">
      <%= button_to "Checkout", orders_path, method: :post, remote: true, 
        class: "checkout-btn bg-blue-600 text-white text-sm font-semibold py-2 px-4 w-full rounded hover:bg-blue-700 transition" %>
    </div>
  <% else %>
    <p class="text-sm text-gray-600">Your cart is empty.</p>
  <% end %>
</div>
 