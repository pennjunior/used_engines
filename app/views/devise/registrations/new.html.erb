<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="auth-container">
    <div class="auth-box">
      <h2 class="auth-title">Sign Up</h2>

      <%= f.input :email, placeholder: "Email Address", required: true, autofocus: true, input_html: { class: 'auth-input' } %>
      <%= f.input :password, placeholder: "Password", required: true, input_html: { class: 'auth-input' } %>
      <%= f.input :password_confirmation, placeholder: "Confirm Password", required: true, input_html: { class: 'auth-input' } %>

      <div class="auth-actions">
        <%= f.submit "Sign Up", class: "auth-button" %>
      </div>

      <div class="auth-footer">
        <p>Already have an account? <%= link_to "Sign In", new_user_session_path, class: 'auth-link' %></p>
      </div>
    </div>
  </div>
<% end %>
