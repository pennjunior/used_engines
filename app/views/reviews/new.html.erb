<!-- app/views/reviews/new.html.erb -->
<h1>New Review</h1>

<%= form_with model: @review, local: true do |form| %>
  <div>
    <%= form.label :name, "Your Name" %>
    <%= form.text_field :name, required: true %>
  </div>

  <div>
    <%= form.label :title %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :content %>
    <%= form.text_area :content, required: true %>
  </div>

  <div>
    <%= form.label :rating %>
    <%= form.number_field :rating, in: 1..5, required: true %>
  </div>

  <div>
    <%= form.label :review_date, "Date of Review" %>
    <%= form.date_select :review_date, start_year: Date.today.year - 10, end_year: Date.today.year %>
  </div>

  <div>
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div>
    <%= form.submit 'Create Review' %>
  </div>
<% end %>
