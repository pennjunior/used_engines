<div class="makes-hero">
    <div class="hero-about-overlay"></div>
    <div class="hero-about-text">
      <h1>Fords In AutozBid </h1>
      <p>Your #1 Destination for Useds/New Cars and Engines </p>
    </div>
  </div>
<div class="content-wrapper">
  <div class="home-makes-section">
    <div class="make-item">
      <%= image_tag('make/ford.avif', alt: 'Ford') %>
    <p style="margin-left: 10px;">Ford</p>
  </div>
  <div><p>
      Ford’s unmatched reputation for quality
    </p></div>
  </div>
  <div class="makes-main-content">
  <h1> Recommended Used Cars </h1>
    <div id="car-list">
    <% if @paginated_items.present? %>
      <% @paginated_items.each do |car| %>
        <a href="<%= car_path(car) %>" class="card">
          <% if car.photos.present? %>
            <%= image_tag car.photos.first, alt: car.make, class: "car-image" %>
          <% else %>
            <div class="no-photo"> No photo available </div>
          <% end %>
          <div class="card-info">
            <h4><%= car.make %> <%= car.model %> <%= car.year %></h4>
            <p>
              <i class="fas fa-tachometer-alt"></i>
              Millage: <%= car.chassis_no %> Mi
            </p>
            <p class="price">Price: $<%= car.price %></p>
          </div>
        </a>
      <% end %>
      <% else %>
        no cars in this category
      <% end %>

  </div>
    <div class="pagination-container">
    <%= paginate @paginated_items %>
  </div>
</div>
</div>
