    <!-- Header -->
    
    <h1>New Engine Equiry! ðŸš€</h1>
    <p>AutoBidHub Order Notification</p>
    <!-- Content -->
    <div class="content">
      <div class="status-indicator">
        <div class="pulse"></div>
        NEW ORDER RECEIVED
      </div>
      
      <p class="greeting">Dear Admin Team,</p>
   
      <!-- Order Details -->
      <div class="order-details">
